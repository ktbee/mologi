{
  "manifest_version": 2,
  "name": "Mologi",
  "version": "1.0",

  "description": "This extension allow you to highlight a word or phrase and get its etymology.",

  "icons": {
    "16": "icons/mologi-icon.svg",
    "32": "icons/mologi-icon.svg",
    "48": "icons/mologi-icon.svg",
    "96": "icons/mologi-icon.svg"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus"
  ],

  "browser_action": {
    "default_icon": "icons/mologi-icon.svg",
    "default_title": "Mologi",
    "default_popup": "popup/info-panel.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["popup/mologi.js"]
  }]
}
